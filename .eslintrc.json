{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "@typescript-eslint/no-require-imports": "off",
    "semi": "off",
    "@typescript-eslint/semi": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "root": true,
  "ignorePatterns": ["node_modules/", ".next/", "out/", "*.js"]
}